# ===================================================================
# IRIS Healthcare API - Phase 5 Environment Configuration Template
# ===================================================================
# This template contains all required environment variables for the
# Phase 5 implementation with performance monitoring and optimization.
#
# Instructions:
# 1. Copy this file to .env
# 2. Update all placeholder values with actual configuration
# 3. Ensure all secrets are properly secured
# 4. Never commit .env files to version control
# ===================================================================

# ===================================================================
# APPLICATION SETTINGS
# ===================================================================
DEBUG=false
ENVIRONMENT=production
SECRET_KEY=your-super-secret-key-here-32-chars-minimum-change-this
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===================================================================
# DATABASE CONFIGURATION
# ===================================================================
DATABASE_URL=postgresql://postgres:password@localhost:5432/iris_db
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Phase 5 Database Performance Settings
DB_QUERY_TIMEOUT_SECONDS=30
DB_CONNECTION_POOL_RECYCLE=3600
DB_ENABLE_QUERY_LOGGING=false
DB_SLOW_QUERY_THRESHOLD_MS=1000

# ===================================================================
# IRIS API CONFIGURATION
# ===================================================================
IRIS_API_BASE_URL=https://api.iris-system.com/v1
IRIS_API_KEY=your-iris-api-key-here
IRIS_API_SECRET=your-iris-api-secret-here
IRIS_API_TIMEOUT=30
IRIS_API_RETRY_ATTEMPTS=3

# ===================================================================
# SECURITY & ENCRYPTION
# ===================================================================
ENCRYPTION_KEY=your-encryption-key-here-32-chars-minimum-change-this
ENCRYPTION_SALT=your-encryption-salt-here-16-chars-minimum

# Phase 5 Security Enhancements
ADVANCED_THREAT_DETECTION=true
IP_REPUTATION_CHECKING=true
USER_AGENT_VALIDATION=true

# ===================================================================
# AUDIT LOGGING & COMPLIANCE
# ===================================================================
AUDIT_LOG_RETENTION_DAYS=2555
AUDIT_LOG_ENCRYPTION=true

# ===================================================================
# DATA PURGE SCHEDULER
# ===================================================================
PURGE_CHECK_INTERVAL_MINUTES=60
DEFAULT_RETENTION_DAYS=90
ENABLE_EMERGENCY_PURGE_SUSPENSION=true

# ===================================================================
# REDIS CONFIGURATION
# ===================================================================
REDIS_URL=redis://localhost:6379/0

# Phase 5 Advanced Caching
REDIS_CACHE_TTL=3600
ENABLE_QUERY_RESULT_CACHING=true
CACHE_WARMUP_ENABLED=true

# ===================================================================
# CORS SETTINGS
# ===================================================================
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# ===================================================================
# RATE LIMITING
# ===================================================================
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST=20

# ===================================================================
# PHASE 5 PERFORMANCE SETTINGS
# ===================================================================

# API Optimization
API_RESPONSE_COMPRESSION=true
API_CACHE_TTL_SECONDS=300
API_MAX_RESPONSE_SIZE_MB=50

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
METRICS_COLLECTION_INTERVAL=60
PERFORMANCE_ALERTS_ENABLED=true

# Load Testing Configuration
LOAD_TESTING_ENABLED=false
MAX_CONCURRENT_REQUESTS=1000
REQUEST_QUEUE_SIZE=5000

# ===================================================================
# OPENTELEMETRY CONFIGURATION
# ===================================================================
OTEL_ENABLED=true
OTEL_SERVICE_NAME=iris-healthcare-api
OTEL_EXPORTER_ENDPOINT=
OTEL_SAMPLE_RATE=0.1

# ===================================================================
# PROMETHEUS METRICS
# ===================================================================
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=8001
PROMETHEUS_NAMESPACE=iris_healthcare

# ===================================================================
# GEOGRAPHIC AND GEOLOCATION
# ===================================================================
GEOIP_DATABASE_PATH=/app/data/geoip/GeoLite2-City.mmdb
ENABLE_GEOGRAPHIC_BLOCKING=false
ALLOWED_COUNTRIES=["US","CA","GB","AU","DE","FR"]

# ===================================================================
# SYSTEM RESOURCE MONITORING
# ===================================================================
CPU_ALERT_THRESHOLD=80.0
MEMORY_ALERT_THRESHOLD=85.0
DISK_ALERT_THRESHOLD=90.0

# ===================================================================
# FILE SYSTEM MONITORING
# ===================================================================
ENABLE_FILE_MONITORING=true
MONITORED_DIRECTORIES=["/app/logs","/app/data","/app/uploads"]

# ===================================================================
# PRODUCTION SPECIFIC SETTINGS
# ===================================================================
# Uncomment and configure for production deployment

# TLS/SSL Configuration
# SSL_KEYFILE=/path/to/ssl/keyfile.pem
# SSL_CERTFILE=/path/to/ssl/certfile.pem
# SSL_CA_CERTS=/path/to/ssl/ca-bundle.crt

# External Service Endpoints
# JAEGER_ENDPOINT=http://jaeger:14268/api/traces
# PROMETHEUS_PUSHGATEWAY_URL=http://pushgateway:9091

# Cloud Provider Settings (AWS/Azure/GCP)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_DEFAULT_REGION=us-east-1

# Backup and Disaster Recovery
# BACKUP_S3_BUCKET=iris-healthcare-backups
# BACKUP_ENCRYPTION_KEY=your-backup-encryption-key
# BACKUP_SCHEDULE_CRON=0 2 * * *

# ===================================================================
# DEVELOPMENT SETTINGS
# ===================================================================
# Uncomment for development environment

# Development Database (SQLite for local dev)
# DATABASE_URL=sqlite:///./data/iris_dev.db

# Development Redis (local instance)
# REDIS_URL=redis://localhost:6379/1

# Development API Keys (use test/mock values)
# IRIS_API_KEY=test-api-key
# IRIS_API_SECRET=test-api-secret

# Development Security (less strict for local testing)
# ADVANCED_THREAT_DETECTION=false
# IP_REPUTATION_CHECKING=false

# ===================================================================
# TESTING SETTINGS
# ===================================================================
# Uncomment for test environment

# Test Database
# DATABASE_URL=postgresql://postgres:test@localhost:5433/iris_test

# Test Redis
# REDIS_URL=redis://localhost:6380/2

# Test Performance Settings
# ENABLE_PERFORMANCE_MONITORING=false
# PROMETHEUS_ENABLED=false
# OTEL_ENABLED=false

