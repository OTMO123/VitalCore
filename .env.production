# VitalCore Production Environment Variables
# Copy to .env and customize for your production deployment

# Database Configuration
POSTGRES_PASSWORD=your_super_secure_database_password_here
DATABASE_URL=postgresql://postgres:your_super_secure_database_password_here@db:5432/iris_db

# Redis Configuration  
REDIS_URL=redis://redis:6379/0

# Security Keys (CHANGE THESE IN PRODUCTION!)
SECRET_KEY=your_super_secret_jwt_key_here_at_least_32_characters_long
ENCRYPTION_KEY=your_encryption_key_here_exactly_32_characters

# MinIO Configuration
MINIO_ROOT_USER=your_minio_admin_user
MINIO_ROOT_PASSWORD=your_minio_admin_password_at_least_8_chars
MINIO_KMS_SECRET_KEY=your-minio-key:base64_encoded_key_here

# Application Configuration
ENVIRONMENT=production
DEBUG=false
FRONTEND_URL=https://yourdomain.com
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Domain Configuration (for SSL certificates)
DOMAIN=yourdomain.com
EMAIL=admin@yourdomain.com

# Healthcare Compliance Settings
ENABLE_AUDIT_LOGGING=true
ENABLE_PHI_ENCRYPTION=true
AUDIT_RETENTION_DAYS=2555  # 7 years
PHI_ACCESS_LOGGING=true

# AI Features
ENABLE_VOICE_RECOGNITION=true
ENABLE_AI_FEATURES=true
ENABLE_SPECIALIST_MODE=true
AI_MODEL_VERSION=gemma-3n-healthcare-v1

# Performance Settings
WORKER_PROCESSES=4
MAX_CONNECTIONS=1000
KEEPALIVE_TIMEOUT=65
CLIENT_MAX_BODY_SIZE=100m

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
LOG_LEVEL=INFO

# Backup Configuration
ENABLE_AUTO_BACKUP=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30